<div>
    <div class="modal-window">
        <img class="card-poster" src='https://image.tmdb.org/t/p/original{{poster_path}}' alt="poster"
            {{original_title}}>

        <div>
            <div class="card-details">
                <h2 class="card-title">{{title}}</h2>
                <ul class="card-list">
                    <li class="card-item">
                        <p class="card-item__about">Vote / Votes</p>
                        <p><span class="vote">{{vote_average}}</span> / {{vote_count}}</p>
                    </li>
                    <li class="card-item">
                        <p class="card-item__about">Popularity</p>
                        <p>{{popularity}}</p>
                    </li>
                    <li class="card-item">
                        <p class="card-item__about">Original Title</p>
                        <p>{{original_title}}</p>
                    </li>
                    <li class="card-item">
                        <p class="card-item__about">Genre</p>
                        <ul>
                            {{#each genres}}
                            <li>{{name}}</li>

                            {{/each}}
                        </ul>
                    </li>
                </ul>
                <h3 class="card-about">About</h3>
                <p class="card-description">{{overview}}</p>

            </div>
            <button class="button button-watched" type="button">add to watched</button>
            <button class="button button-queue" type="button">add to queue</button>
        </div>
    </div>
</div>